{
  "Phase_1_Assessment_0_3_months": {
    "title": "Assessment & Planning Phase",
    "duration": "0-3 months",
    "activities": [
      {
        "task": "Data Audit",
        "details": "Identify all personal data processed, storage locations, purposes, categories of data",
        "responsible": "Data Protection Officer / IT Team",
        "dpdp_section": "Section 8 (General Obligations)"
      },
      {
        "task": "Process Mapping",
        "details": "Document all data processing activities, flows, third-party sharing",
        "responsible": "Compliance Team",
        "dpdp_section": "Section 2 (Definitions - Processing)"
      },
      {
        "task": "Legal Assessment",
        "details": "Review current data practices against DPDP requirements",
        "responsible": "Legal Team",
        "dpdp_section": "All Chapters"
      },
      {
        "task": "Consent Review",
        "details": "Audit existing consent mechanisms and pre-DPDP consents",
        "responsible": "Customer Experience Team",
        "dpdp_section": "Section 5, 6"
      },
      {
        "task": "Third-party Contracts Review",
        "details": "Review LSP/Data Processor agreements for DPDP compliance",
        "responsible": "Procurement / Legal",
        "dpdp_section": "Section 8(2)"
      },
      {
        "task": "Gap Analysis Report",
        "details": "Document all compliance gaps and remediation requirements",
        "responsible": "Compliance Lead",
        "dpdp_section": "Section 10 (for SDFs)"
      }
    ]
  },
  "Phase_2_Policy_Development_3_6_months": {
    "title": "Policy Development & System Setup",
    "duration": "3-6 months",
    "activities": [
      {
        "task": "Data Protection Impact Assessment (DPIA)",
        "details": "For Significant Data Fiduciaries: conduct periodic DPIA per Section 10",
        "responsible": "Data Protection Officer",
        "dpdp_section": "Section 10(2)(c)(i)"
      },
      {
        "task": "Privacy Policy Development",
        "details": "Create comprehensive privacy policy compliant with DPDP and RBI guidelines",
        "responsible": "Legal + Compliance",
        "dpdp_section": "Section 8(9), RBI Para 14"
      },
      {
        "task": "Data Retention Policy",
        "details": "Define retention periods for each data category, deletion procedures",
        "responsible": "Compliance Team",
        "dpdp_section": "Section 8(7)"
      },
      {
        "task": "Consent Request Templates",
        "details": "Develop clear, plain-language consent forms with withdrawal mechanisms",
        "responsible": "UX/Legal",
        "dpdp_section": "Section 5, 6"
      },
      {
        "task": "Grievance Redressal SOP",
        "details": "Create process for receiving and resolving Data Principal grievances",
        "responsible": "Customer Service",
        "dpdp_section": "Section 13"
      },
      {
        "task": "Data Breach Response Plan",
        "details": "Create protocol for identifying, documenting, and notifying breaches",
        "responsible": "IT Security + Legal",
        "dpdp_section": "Section 8(6)"
      },
      {
        "task": "DPO Appointment (for SDFs)",
        "details": "Identify and appoint Data Protection Officer meeting Section 10 criteria",
        "responsible": "HR + Board",
        "dpdp_section": "Section 10(2)(a)"
      },
      {
        "task": "Third-party Audit Framework",
        "details": "For SDFs: establish independent data auditor engagement process",
        "responsible": "Audit Committee",
        "dpdp_section": "Section 10(2)(b)"
      }
    ]
  },
  "Phase_3_Technical_Implementation_6_9_months": {
    "title": "Technical Implementation & Infrastructure",
    "duration": "6-9 months",
    "activities": [
      {
        "task": "Data Localization",
        "details": "Ensure all personal data stored in India; if processed outside, delete within 24 hours",
        "responsible": "IT Infrastructure",
        "dpdp_section": "Section 3, RBI Para 13"
      },
      {
        "task": "Consent Management System",
        "details": "Implement system for recording, tracking, and managing consent with audit trails",
        "responsible": "Product + Engineering",
        "dpdp_section": "Section 6"
      },
      {
        "task": "Data Access Controls",
        "details": "Implement role-based access, encryption, security safeguards",
        "responsible": "IT Security",
        "dpdp_section": "Section 8(4), (5)"
      },
      {
        "task": "Data Subject Rights Portal",
        "details": "Build/integrate portal for right to access, correction, erasure requests",
        "responsible": "Product Team",
        "dpdp_section": "Section 11, 12, 13"
      },
      {
        "task": "Breach Detection & Monitoring",
        "details": "Implement security monitoring, breach detection, alert systems",
        "responsible": "IT Security",
        "dpdp_section": "Section 8(6)"
      },
      {
        "task": "Automated Notification System",
        "details": "System for notifying Board and Data Principals of breaches",
        "responsible": "Product/IT",
        "dpdp_section": "Section 8(6)"
      },
      {
        "task": "Integration with LSPs",
        "details": "Update LSP agreements, data flows, control mechanisms",
        "responsible": "Integration Team",
        "dpdp_section": "Section 8(1), (2)"
      },
      {
        "task": "Technology Standards Compliance",
        "details": "Meet cybersecurity and technology standards per RBI guidelines",
        "responsible": "IT/Security",
        "dpdp_section": "RBI Para 15"
      }
    ]
  },
  "Phase_4_Process_Alignment_9_12_months": {
    "title": "Business Process Alignment & Training",
    "duration": "9-12 months",
    "activities": [
      {
        "task": "Consent Management Training",
        "details": "Train all customer-facing staff on consent mechanisms",
        "responsible": "HR + Compliance",
        "dpdp_section": "Section 5, 6"
      },
      {
        "task": "Data Minimization",
        "details": "Align business processes to collect only necessary data",
        "responsible": "All Departments",
        "dpdp_section": "Section 6"
      },
      {
        "task": "Purpose Limitation",
        "details": "Ensure data used only for specified purposes agreed by Data Principal",
        "responsible": "All Departments",
        "dpdp_section": "Section 6"
      },
      {
        "task": "Borrower Disclosure Update",
        "details": "Update all borrower communications with required disclosures",
        "responsible": "Marketing/Compliance",
        "dpdp_section": "Section 5, RBI Para 8"
      },
      {
        "task": "Website & App Updates",
        "details": "Update websites/apps with privacy policies, DPO contact, LSP details",
        "responsible": "Marketing/Product",
        "dpdp_section": "Section 8(9), RBI Para 8(iv)"
      },
      {
        "task": "KFS & Disclosure Documents",
        "details": "Ensure Key Fact Statements include privacy policies and data handling",
        "responsible": "Product/Compliance",
        "dpdp_section": "RBI Para 8"
      },
      {
        "task": "Company-wide Training",
        "details": "DPDP compliance training for all staff handling personal data",
        "responsible": "HR + Compliance",
        "dpdp_section": "All Chapters"
      }
    ]
  },
  "Phase_5_Monitoring_Ongoing": {
    "title": "Ongoing Monitoring & Compliance",
    "duration": "12+ months (Ongoing)",
    "activities": [
      {
        "task": "Regular Audits",
        "details": "Conduct periodic audits of DPDP and RBI compliance",
        "responsible": "Internal Audit",
        "dpdp_section": "Section 10(2)(c)(ii)"
      },
      {
        "task": "DPA Execution",
        "details": "Execute Data Processing Agreements with all LSPs and processors",
        "responsible": "Legal",
        "dpdp_section": "Section 8(2)"
      },
      {
        "task": "Consent Renewal",
        "details": "For pre-DPDP consents: provide notice and manage consent updates",
        "responsible": "Compliance",
        "dpdp_section": "Section 5(2)"
      },
      {
        "task": "Data Subject Requests Processing",
        "details": "Establish SLAs for processing access, correction, erasure requests",
        "responsible": "Grievance Team",
        "dpdp_section": "Section 11, 12, 13"
      },
      {
        "task": "Breach Monitoring",
        "details": "Continuous monitoring and annual breach incident review",
        "responsible": "IT Security",
        "dpdp_section": "Section 8(6)"
      },
      {
        "task": "DLA Reporting to RBI",
        "details": "Report all digital lending apps to RBI CIMS portal",
        "responsible": "Compliance",
        "dpdp_section": "RBI Para 17"
      },
      {
        "task": "Policy Updates",
        "details": "Update policies as regulations and practices evolve",
        "responsible": "Legal + Compliance",
        "dpdp_section": "All sections"
      },
      {
        "task": "Third-party Compliance Checks",
        "details": "Regular verification of LSP/processor DPDP and RBI compliance",
        "responsible": "Compliance",
        "dpdp_section": "Section 8(1)"
      }
    ]
  }
}